<Window x:Class="CodeCallout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeCallout"
        AllowsTransparency="True"
        WindowStyle="None"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Background="#40c0c0ff"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="96"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:Name="img" Grid.Row="0" Stretch="None">
            <Image.Effect>
                <DropShadowEffect ShadowDepth="20" Color="Teal" Opacity=".3" RenderingBias="Performance" />
            </Image.Effect>
        </Image>
        <TextBox x:Name="txt" Grid.Row="1" FontSize="64" HorizontalAlignment="Center" TextChanged="txt_TextChanged">
            <TextBox.Effect>
                <DropShadowEffect ShadowDepth="5" Color="BurlyWood" Opacity=".4" RenderingBias="Performance" />
            </TextBox.Effect>
        </TextBox>
        <StackPanel>
        </StackPanel>
    </Grid>
</Window>
